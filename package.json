{
  "name": "zoho-signature-generator",
  "version": "3.3.0",
  "type": "module",
  "description": "Professional email signatures for Zoho employees",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:visual": "playwright test tests/visual/",
    "test:visual:ui": "playwright test tests/visual/ --ui",
    "test:visual:headed": "playwright test tests/visual/ --headed",
    "test:a11y": "playwright test tests/a11y/",
    "test:all": "npm run test && npm run test:visual && npm run test:a11y",
    "test:update-snapshots": "vitest run -u && playwright test --update-snapshots",
    "prepare": "husky",
    "lighthouse": "lhci autorun"
  },
  "keywords": [
    "email-signature",
    "zoho"
  ],
  "author": "Tejas Gadhia",
  "license": "SEE LICENSE IN LICENSE.md",
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@lhci/cli": "^0.14.0",
    "@playwright/test": "^1.58.1",
    "@types/node": "^25.2.1",
    "@types/sortablejs": "^1.15.9",
    "husky": "^9.1.7",
    "jsdom": "^28.0.0",
    "lint-staged": "^15.5.2",
    "terser": "^5.46.0",
    "typescript": "^5.3.3",
    "vite": "^6.4.1",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "sortablejs": "^1.15.6"
  },
  "lint-staged": {
    "*.{ts,js}": "echo 'Type checking skipped during commit (runs in CI)'"
  }
}

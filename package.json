{
  "name": "zoho-signature-generator",
  "version": "2.0.0",
  "type": "module",
  "description": "Professional email signatures for Zoho employees",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "test:a11y": "playwright test tests/e2e/accessibility.spec.js",
    "test:a11y:report": "playwright test tests/e2e/accessibility.spec.js --reporter=list",
    "test:visual": "backstop test",
    "test:visual:reference": "backstop reference",
    "test:visual:approve": "backstop approve",
    "test:visual:report": "backstop openReport"
  },
  "keywords": [
    "email-signature",
    "zoho"
  ],
  "author": "Tejas Gadhia",
  "license": "SEE LICENSE IN LICENSE.md",
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@playwright/test": "^1.58.0",
    "@types/node": "^20.11.5",
    "@vitest/ui": "^1.2.0",
    "backstopjs": "^6.3.25",
    "jsdom": "^24.0.0",
    "terser": "^5.46.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vitest": "^1.2.0"
  }
}
